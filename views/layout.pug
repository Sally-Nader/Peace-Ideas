	body
		block formHeader
		// Start Header Area
		header.default-header
			nav.navbar.navbar-expand-lg.navbar-light
				.container
					a.navbar-brand(href='/')
						img(src='img/lo.jpg', alt='')
					button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
						span.navbar-toggler-icon
					#navbarSupportedContent.collapse.navbar-collapse.justify-content-end.align-items-center
						ul.navbar-nav
							li
								a(href='#home') Home
							li
								a(href='/my-profile') My Profile
							li
								a(href='/playlists') Playlists
						
							// Dropdown
							if (locals.session.userName)
								li.dropdown
									a#navbardrop.dropdown-toggle(href='#', data-toggle='dropdown')
										|  #{locals.session.userName}
									.dropdown-menu
										a.dropdown-item(href='/my-profile') My Profile
										a.dropdown-item(href='/logout') Logout
							else
								li.dropdown
									a#navbardrop.dropdown-toggle(href='#', data-toggle='dropdown')
										|  log
									.dropdown-menu
										a.dropdown-item(href='/login') Login
										a.dropdown-item(href='/register') Register			
		// End Header Area
		// start banner Area
		block messages
			if locals.flashes
				.container
					.col-lg-6.mt-10
						.inner.inner--flashes
							.flash-messages
								- const categories = Object.keys(flashes)
								each category in categories
									each message in flashes[category]
										.flash(class=`flash--${category}`)
											p.flash__text!= message
											button.flash__remove(onClick="this.parentElement.remove()") &times;
				
